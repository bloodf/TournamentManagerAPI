    "glob": "7.1.3",
    "good": "8.1.1",
    "good-console": "^7.1.0",
    "hapi": "17.8.1",
    "hapi-swagger": "9.3.0",
    "http-status": "1.3.1",
    "inert": "5.1.2",
    "joi": "14.3.1",
    "lodash": "4.17.11",
    "moment": "^2.24.0",
    "nodemon": "^1.18.9",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
